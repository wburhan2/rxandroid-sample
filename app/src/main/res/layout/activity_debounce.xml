<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/enter_something_textview"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/enter_something"
		android:layout_centerHorizontal="true"
		android:textStyle="bold"
		android:textSize="24sp"
		android:layout_marginTop="24dp"/>

	<EditText
		android:id="@+id/input_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:layout_below="@id/enter_something_textview"
		android:maxLength="24"
		android:singleLine="true"
		android:layout_alignRight="@+id/enter_something_textview"
		android:layout_alignEnd="@+id/enter_something_textview"
		android:layout_alignLeft="@+id/enter_something_textview"
		android:layout_alignStart="@+id/enter_something_textview"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"/>

	<ListView
		android:id="@+id/log_list_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/input_text"
		android:layout_margin="6dp">
	</ListView>

	<Button
		android:id="@+id/clear_log_btn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/clear"
		android:textSize="12sp"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true" />

</RelativeLayout>
